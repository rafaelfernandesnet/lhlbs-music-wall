<% if @track && @track.errors.any? %>
  <div>
    <strong>Some issues with your track, please fix them:</strong>
    <ul>
      <%# binding.pry %>
      <% @track.errors.full_messages.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form method="post" action = '/tracks'>
  <div>
    <label>Song Title:</label>
    <input type="text" name="song_title" value="<%= @track && @track.song_title%>">
  </div>
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track && @track.author %>">
  </div>
  <div>
    <label>Url:</label>
    <input type="text" name="url" value="<%= @track && @track.url %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>
